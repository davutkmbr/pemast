{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "moduleResolution": "node16",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "exactOptionalPropertyTypes": true,
      "skipLibCheck": true,
      "types": ["node"]
    },
    "include": ["src/**/*.ts"]
  }
  